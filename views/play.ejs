<%- include('header') %>
<script>
  var AUDIO_ID = "<%= audio_id %>";
  var currentMinute, currentSecond;
</script>
<script src="/socket.io/socket.io.js" defer></script>
<script src="/play.js" defer></script>
<h1 class="display-6 text-center mb-5 mt-5"><%= Audio.name %></h1>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="card shadow col-8 cardstyle bg-light">
      <div class="card-body">
        <audio controls autoplay id="audio" class="col-12">
          <source
            src="/audio/<%= filename%>"
            id="mp3-player"
            type="audio/mp3"
          />
        </audio>
      </div>
    </div>
  </div>
  <div class="row justify-content-center mt-5 rounded-3">
    <div class="card shadow col-6 justify-content-center">
      <h2 class="display-6 text-center mb-5 mt-5" id="result"></h2>
      <div class="form-group required mb-4">
        <label class="control-label" for="username">Title</label>
        <input
          class="form-control"
          id="comment-name"
          name="username"
          required
          type="text"
        />
      </div>
      <div class="form-group required mb-4">
        <label class="control-label" for="username">Comment</label>
        <textarea
          class="form-control"
          id="textarea"
          name="username"
          required
          type="text"
        >
        </textarea>
      </div>
      <button id="add-comment" class="mb-4 col-3 btn btn-success">
        Add comment
      </button>
    </div>
  </div>
  <div id="all-comments"></div>
</div>
<%- include('footer') %>
